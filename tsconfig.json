{
  "compilerOptions": {
    "target": "es6", 
    "importHelpers": true,                         
    "module": "commonjs",                                        
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true       
  }
}